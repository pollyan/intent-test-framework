# Intent Test Framework - 环境变量示例配置

# ==============================================
# 数据库配置
# ==============================================

# 生产环境 - PostgreSQL (Supabase)
DATABASE_URL=postgresql://user:password@host:port/database_name

# 开发环境 - SQLite (本地开发)
# DATABASE_URL=sqlite:///./intent_test_framework.db

# 测试环境 - 内存数据库（在CI中自动设置）
# DATABASE_URL=sqlite:///:memory:

# ==============================================
# Flask应用配置
# ==============================================

# 应用密钥（生产环境请设置为强随机值）
SECRET_KEY=your_secret_key_here_please_change_in_production

# 调试模式（生产环境必须为false）
DEBUG=true
FLASK_ENV=development

# CSRF保护（生产环境建议开启）
WTF_CSRF_ENABLED=true

# ==============================================
# AI服务配置（MidScene.js引擎）
# ==============================================

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here

# 推荐：使用阿里云DashScope（兼容OpenAI格式）
OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
MIDSCENE_MODEL_NAME=qwen-vl-max-latest

# 备选：使用OpenAI官方
# OPENAI_BASE_URL=https://api.openai.com/v1
# MIDSCENE_MODEL_NAME=gpt-4o

# ==============================================
# 应用程序配置
# ==============================================

# 应用端口（默认5000）
PORT=5000

# 日志级别
LOG_LEVEL=INFO

# 会话超时（秒）
PERMANENT_SESSION_LIFETIME=3600

# 最大内容长度（字节）
MAX_CONTENT_LENGTH=16777216

# ==============================================
# AI服务器配置
# ==============================================

# MidScene服务器端口
MIDSCENE_SERVER_PORT=3456

# 浏览器超时设置
BROWSER_TIMEOUT=30000
PAGE_TIMEOUT=30000

# ==============================================
# 测试配置（仅在测试环境使用）
# ==============================================

# 测试标识
TESTING=false

# 禁用登录（测试环境）
LOGIN_DISABLED=false

# Mock AI服务（测试环境）
MOCK_AI_SERVICE=false

# ==============================================
# 开发工具配置
# ==============================================

# 热重载
FLASK_DEBUG=true

# 自动重启
FLASK_RUN_RELOAD=true

# 允许的主机
FLASK_RUN_HOST=127.0.0.1

# ==============================================
# 安全配置
# ==============================================

# CORS配置
CORS_ORIGINS=*

# 安全头部
SECURITY_HEADERS=true

# ==============================================
# 性能配置
# ==============================================

# 数据库连接池
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 缓存配置
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ==============================================
# 部署配置
# ==============================================

# Vercel部署标识
VERCEL=false

# 生产环境标识  
PRODUCTION=false

# 静态文件服务
STATIC_FOLDER=static
TEMPLATE_FOLDER=templates